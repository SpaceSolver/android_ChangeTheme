<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/actionBar</item>
    </style>
    <style name="actionBar" parent="Widget.AppCompat.ActionBar">
        <!-- タイトルバーの背景色 -->
        <item name="android:background">#00BFFF</item>
    </style>

    <style name="AppTheme_Dark" parent="Theme.AppCompat.Light">

<!--        <item name="android:background">@color/black</item>   -->

        <item name="android:textSize">32dp</item>

        <item name="android:statusBarColor">#ff0066</item>
        <item name="android:navigationBarColor">#335566</item>
        <item name="android:windowBackground">#424242</item>
        <item name="android:textColorPrimary">#ff9900</item>
        <item name="android:textColor">#6666ee</item>

        <item name="android:colorPrimary">#0033FF</item>
        <item name="android:colorAccent">#F8BBD0</item>

        <item name="toolbarStyle">@style/MyApp.Toolbar</item>
    </style>

    <style name="MyApp.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">#00BFFF</item>
        <item name="titleTextAppearance">@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse</item>
    </style>

</resources>
